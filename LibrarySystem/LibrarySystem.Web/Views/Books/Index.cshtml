@model IEnumerable<LibrarySystem.Web.Models.Book>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.Label("Page count")
        </th>
        <th>
            @Html.Label("Publishing date")
        </th>
        <th>
            @Html.Label("Author Name")
        </th>
        <th>
            @Html.Label("Owner name")
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.isDeleted)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr style="background-color: @(item.Owner.Name != "Unknown" ? "red" : "white");">
        
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ISBN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.countPages)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.datePublished)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Owner.Name)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.isDeleted)
        </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            @Html.ActionLink("Hire", "Hire", new { id = item.Id })
        </td>
    </tr>
}

</table>
